<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg"

    >
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#af000000"
        android:paddingTop="30dp">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%w">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            app:layout_heightPercent="7%w"
            app:layout_widthPercent="10%w"
            app:layout_marginLeftPercent="3%w"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_back"
            android:text="songName"
            android:textColor="@color/white"
            app:layout_textSizePercent="4.5%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="1%w"/>
        <TextView
            android:id="@+id/tv_artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_back"
            android:text="artistName"
            android:textColor="@color/gray"
            app:layout_textSizePercent="3%w"
            app:layout_marginLeftPercent="5%w"
            android:layout_alignParentBottom="true"
            app:layout_marginBottomPercent="1%w"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="6%w"
            app:layout_widthPercent="6%w"
            app:layout_marginRightPercent="3%w"
            android:src="@mipmap/share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>


    </com.zhy.android.percent.support.PercentRelativeLayout>


        <FrameLayout
            android:id="@+id/fl_middleContent"
            android:layout_below="@+id/layout_top"
            android:layout_above="@+id/tv_currentTime"
            app:layout_marginBottomPercent="5%w"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>

        <TextView
            android:id="@+id/tv_currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:layout_above="@+id/seekbar"
            app:layout_marginLeftPercent="10%w"/>
        <TextView
            android:id="@+id/tv_durationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="durationTime"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_above="@+id/seekbar"
            app:layout_marginRightPercent="10%w"/>
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            app:layout_widthPercent="80%w"
            android:paddingLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:layout_marginBottomPercent="22%w"
            android:progressDrawable="@drawable/ui_seekbar"
            android:thumb="@mipmap/point"
            />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layout_marginBottomPercent="8%w">
            <ImageView
                android:id="@+id/iv_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="30%w"
                app:layout_widthPercent="9%w"
                app:layout_heightPercent="9%w"
                android:src="@mipmap/previous"
                android:layout_gravity="center_vertical"
               />
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pause"
                app:layout_marginLeftPercent="8%w"
                />
            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="8%w"
                app:layout_widthPercent="9%w"
                app:layout_heightPercent="9%w"
                android:src="@mipmap/next"
                android:layout_gravity="center_vertical"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>